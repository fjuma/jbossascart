#!/bin/bash -eu

source $OPENSHIFT_JBOSSAS_DIR/bin/util

case "$1" in
  -v|--version)
    version="$2"
esac

echo "$version" > "$OPENSHIFT_JBOSSAS_DIR/env/OPENSHIFT_JBOSSAS_VERSION"

ln -s ${OPENSHIFT_JBOSSAS_DIR}/standalone/log ${OPENSHIFT_JBOSSAS_DIR}/logs

# Install the Unified Push Server WAR
cp ${OPENSHIFT_JBOSSAS_DIR}/versions/${version}/standalone/deployments/ag-push.war $OPENSHIFT_JBOSSAS_DIR/standalone/deployments/ROOT.war

JBOSS_HOME=/etc/alternatives/jbossas-$version
pushd $OPENSHIFT_JBOSSAS_DIR 1> /dev/null
  ln -s ${JBOSS_HOME}/jboss-modules.jar
  ln -s ${JBOSS_HOME}/modules
popd 1> /dev/null

touch ${OPENSHIFT_JBOSSAS_DIR}/env/OPENSHIFT_JBOSSAS_CLUSTER
touch ${OPENSHIFT_JBOSSAS_DIR}/env/OPENSHIFT_JBOSSAS_CLUSTER_REMOTING

update-configuration java7
